@using TaskManagement.Application.InputModels;
@model LoginInputModel;
@{
	ViewData["Title"] = "Login";
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>TaskManagement - @ViewData["Title"]</title>
	<link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
	<!-- CSS -->
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css">
	<link rel="stylesheet" href="~/css/style.css">
</head>
<body id="login-body">
	<div id="login-overlay"></div>
	<div class="container centered-card">
		<div class="card" id="card-auth">
			<div class="row">
				<h3 id="card-login-title">TaskManager Login</h3>
			</div>
			<hr />
			<div class="card-body">
				<form asp-controller="Login" asp-action="Auth" id="login-form">
					@if (TempData["SuccessRegisted"] != null)
					{
						<div class="alert alert-success" role="alert">
							@TempData["SuccessRegisted"]
						</div>
					}
					<div class="form-group">
						<label asp-for="Email">E-mail</label>
						<input asp-for="Email" type="email" class="form-control" placeholder="Digite seu E-mail">
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Password">Senha</label>
						<input asp-for="Password" type="password" class="form-control" id="input-password-login" placeholder="Digite sua Senha">
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>

					<button type="submit" class="btn btn-dark btn-login">Entrar</button>
				</form>
			</div>
			<hr />
			<div id="card-login-footer">
				<a asp-controller="Register" asp-action="Index" id="link-register">Não possui uma conta? Registre-se!</a>
			</div>
		</div>
	</div>

	<script src="~/lib/jquery/jquery.js"></script>
	<partial name="_ValidationScripts" />
	<script src="~/lib/bootstrap/js/bootstrap.js"></script>
	<script src="https://kit.fontawesome.com/6e89ef37f6.js" crossorigin="anonymous"></script>
	<script src="~/js/script.js"></script>
	<script src="~/js/login/login.js"></script>
</body>
</html>